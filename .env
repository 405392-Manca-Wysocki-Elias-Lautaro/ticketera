# ========================
# Ticketera - PROD ENV
# ========================

# --- Postgres ---
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_DB=ticketera_prod
POSTGRES_USER=ticketera_app
# POSTGRES_PASSWORD: NO lo definas acá si el repo es público.
# Cargalo por environment del host, secrets del CI/CD o un segundo env-file privado.
PGDATA_VOL=ticketera_prod_pgdata
PG_PORT=5432  # se ignora si no mapeás puertos en compose

# --- Node/Frontend ---
NODE_ENV=production
FRONTEND_PORT=80

# --- Backend / Spring Boot ---
SPRING_PROFILES_ACTIVE=prod
BACKEND_PORT=8080

# --- RabbitMQ ---
# RABBITMQ_DEFAULT_USER / RABBITMQ_DEFAULT_PASS: definilos en un env-file privado o secrets del CI/CD
RABBITMQ_PORT=5672

# --- Timezone ---
TZ=America/Argentina/Cordoba
