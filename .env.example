# ========================
# Ticketera - DEV ENV (.env.example)
# ========================

# --- Postgres ---
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_DB=ticketera_dev            # Nombre de la DB local
POSTGRES_USER=ticketera_app          # Usuario de la DB
POSTGRES_PASSWORD=changeme           # ⚠️ Reemplazar con clave local
PGDATA_VOL=ticketera_dev_pgdata
PG_PORT=5432

# --- Schemas por servicio ---
AUTH_DB_SCHEMA=auth_dev
EVENT_DB_SCHEMA=event_dev
TICKET_DB_SCHEMA=ticket_dev
PAYMENT_DB_SCHEMA=payment_dev
NOTIFICATION_DB_SCHEMA=notification_dev
ORDER_DB_SCHEMA=order_dev
GATEWAY_DB_SCHEMA=gateway_dev

# --- Node/Frontend ---
NODE_ENV=development
FRONTEND_PORT=3000

# --- Backend / Spring Boot ---
SPRING_PROFILES_ACTIVE=dev
BACKEND_PORT=8080

# --- RabbitMQ ---
RABBITMQ_DEFAULT_USER=guest          # Usuario por defecto
RABBITMQ_DEFAULT_PASS=guest          # Contraseña por defecto
RABBITMQ_PORT=5672

# --- Timezone ---
TZ=America/Argentina/Cordoba
